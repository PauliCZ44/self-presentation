---
import SkillAndIcon from "../components/SkillAndIcon.astro";
import blazor from "../icons/blazor.svg";

const mainSkills = [
  { skill: "React", icon: "logos:react", href: "https://reactjs.org/" },
  {
    skill: "Typescript",
    icon: "logos:typescript-icon",
    href: "https://www.typescriptlang.org/",
  },
  {
    skill: "MaterialUI",
    icon: "logos:material-ui",
    href: "https://material-ui.com/",
  },
  {
    skill: "CSS/SCSS",
    icon: "logos:css-3",
    href: "https://developer.mozilla.org/en-US/docs/Web/CSS",
  },
  {
    skill: "Tailwind",
    icon: "logos:tailwindcss-icon",
    href: "https://tailwindcss.com/",
  },
  {
    skill: "Bootstrap",
    icon: "logos:bootstrap",
    href: "https://getbootstrap.com/",
  },
  {
    skill: "Storybook",
    icon: "logos:storybook-icon",
    href: "https://storybook.js.org/",
  },
  { skill: "Vite", icon: "logos:vitejs", href: "https://vitejs.dev/" },
];
// From this list generate key-pair values: Blazor, Python, C, JQuery, Express, Node.js, MongoDB, webpack, Svelte, SQL, Angular (not interested), Next.js, Jest, MapBox, Mantine.
const workedWith = [
  { skill: "Mantine", icon: "mantine", href: "https://mantine.dev/" },
  { skill: "Next.js", icon: "next", href: "https://nextjs.org/" },
  {
    skill: "Astro",
    icon: "vscode-icons:file-type-astro",
    href: "https://astro.build/",
  },
  { skill: "Express", icon: "express", href: "https://expressjs.com/" },
  { skill: "Node.js", icon: "logos:nodejs-icon", href: "https://nodejs.org/" },
  {
    skill: "Playwright",
    icon: "logos:playwright",
    href: "https://playwright.dev/",
  },
  { skill: "Svelte", icon: "logos:svelte-icon", href: "https://svelte.dev/" },
  {
    skill: "Blazor",
    icon: "blazor",
    href: "https://dotnet.microsoft.com/apps/aspnet/web-apps/blazor",
  },
  { skill: "Vitest", icon: "logos:vitest", href: "https://vitest.dev/" },
  {
    skill: "MapBox",
    icon: "logos:mapbox-icon",
    href: "https://www.mapbox.com/",
  },
];

// Git, GitLab, Figma, T3Stack, Remix, Sveltekit, Styled Components, Prettier, ESLitn, Backend
// developement.
const otherInterests = [
  { skill: "GitLab", icon: "logos:gitlab", href: "https://gitlab.com/" },
  { skill: "Figma", icon: "logos:figma", href: "https://www.figma.com/" },
  { skill: "T3Stack", icon: "t3", href: "https://create.t3.gg/" },
  { skill: "Remix", icon: "remix", href: "https://remix.run/" },
  {
    skill: "VSCode",
    icon: "logos:visual-studio-code",
    href: "https://code.visualstudio.com/",
  },
  { skill: "Prettier", icon: "logos:prettier", href: "https://prettier.io/" },
  { skill: "ESLint", icon: "logos:eslint", href: "https://eslint.org/" },
];
const allSkills = [
  { skills: mainSkills, title: "Main stack", iconWidth: "2.75rem" },
  { skills: workedWith, title: "Worked with", iconWidth: "1.75rem" },
  {
    skills: otherInterests,
    title: "Other interests and tools",
    iconWidth: "1.5rem",
  },
];
---

{
  allSkills.map(({ skills, title, iconWidth }, i) => (
    <div>
      <h6 class="font-bold font-mono pt-20 pb-6 fs-base text-center">
        {title}
      </h6>
      <div class="flex flex-wrap gap-8 justify-center">
        {skills.map(({ skill, icon, href }, j) => (
          <SkillAndIcon
            index={i / 2 + j}
            iconName={icon}
            skill={skill}
            href={href}
            iconWidth={iconWidth}
          />
        ))}
      </div>
    </div>
  ))
}
