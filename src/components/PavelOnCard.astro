---
import { Image } from "astro:assets";
import me from "../images/me.png";
---

<div class="screen">
  <div class="screen-overlay"></div>
  <div class="screen-content">
    <div class="screen-user">
      <span class="name" data-value="PAVEL ŠŤASTNÝ" data-atropos-offset="2"
        >P??EL Š?T?N?A</span
      >
      <div class="divider" data-atropos-offset="3"></div>
      <p class="title" data-atropos-offset="2">Front-end developer</p>
    </div>
    <div class="img-wrapper" data-atropos-offset="1" data-atropos-opacity="1;0.8">
      <Image
        class="screen-image"
        src={me}
        alt="Pavel Šťastný image"
        width="700"
        height="700"
      />
    </div>
  </div>
</div>

<script>
  /* -- Text effect -- */
  const letters = "ABCČDĎEĚFGHIJKLMNŇOPQRŘSŠTŤUVWXYZŽ#Đ0123456789";

  let interval: any = null;
  let lastAnimationTimestamp = 0;
  const screen = document.querySelector(".screen")! as HTMLElement;
  const name = document.querySelector(".name")! as HTMLElement;

  window.addEventListener("load", () => {
    setTimeout(()=> {
      handleMouseEnter()
    }, 1500)
  });

  function handleMouseEnter() {
    if (Date.now() - lastAnimationTimestamp > 5000) {
      lastAnimationTimestamp = Date.now();
    } else {
      return;
    }

    let iteration = 0;

    clearInterval(interval);

    // If 10 second passed from previous animation, start new one

    interval = setInterval(() => {
      name.innerText = name?.innerText
        .split("")
        .map((letter: string, index: number) => {
          if (index < iteration || letter === " ") {
            // @ts-ignore
            return name.dataset.value[index];
          }

          return letters[Math.floor(Math.random() * 26)];
        })
        .join("");
      // @ts-ignore
      if (iteration >= name.dataset.value.length) {
        clearInterval(interval);
      }

      iteration += 1 / 3;
    }, 60);
  }

  screen.closest(".atropos")!.addEventListener("mouseenter", handleMouseEnter);
</script>

<style lang="scss">
  .screen {
    animation: fadeInDown 750ms cubic-bezier(0.390, 0.575, 0.565, 1.000) both;
    max-height: 86vh;
    min-height: 500px;
    min-width: 450px;
    display: flex;
    border: 3px solid hsl(var(--primary-hsl) / 80%);
    aspect-ratio: 3/4;
    border-radius: 1rem;
    background-color: hsl(var(--primary-hsl) / 15%);
    overflow: hidden;
    position: relative;
    z-index: 10;
    box-shadow:
      0px 0px 8px 3px hsl(var(--primary-hsl) / 60%),
      var(--shadow-elevation-medium);
    margin: 30px;

    @media (max-width: 550px) {
       scale: 0.75
    }
    @media (max-width: 400px) {
       scale: 0.5
    }
  }

  .screen:after,
  .screen:before {
    content: "";
    height: 5px;
    position: absolute;
    z-index: 4;
    left: 50%;
    translate: -50% 0%;
    background-color: white;
  }

  .screen:before {
    width: 15%;
    top: 0rem;
    border-bottom-left-radius: 1rem;
    border-bottom-right-radius: 1rem;
  }

  .screen:after {
    width: 25%;
    bottom: 0rem;
    border-top-left-radius: 1rem;
    border-top-right-radius: 1rem;
  }

  @keyframes pan-overlay {
    from {
      background-position: 0% 0%;
    }

    to {
      background-position: 0% -100%;
    }
  }

  .screen-overlay {
    background: linear-gradient(
      hsl(var(--primary-hsl) / 0.15),
      hsl(var(--primary-hsl) / 0.15) 3px,
      transparent 3px,
      transparent 9px
    );
    background-size: 100% 9px;
    height: 100%;
    width: 100%;
    animation: pan-overlay 32s infinite linear;
    position: absolute;
    z-index: 2;
    left: 0px;
    top: 0px;
  }

  .screen {
    .img-wrapper {
      // height: auto;
      // width: calc(100% - 2rem);
      // position: absolute;
      // right: 1rem;
      // bottom: 1rem;
      overflow: hidden;
      border-radius: 0.6rem;
    }
    .screen-image {
      // background-image: url('https://images.unsplash.com/photo-1515266591878-f93e32bc5937?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2574&q=80');
      height: auto;
      width: 100%;
      transform: translateY(10px) scale(1);
      transition:
        transform 0.125s ease,
        filter 0.25s ease-in-out;
      filter: sepia(100%) contrast(130%) brightness(90%) grayscale(60%);
    }
  }

  .screen > .screen-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    flex-grow: 1;
    position: relative;
    z-index: 3;
    margin: 1rem;
    border: 1px solid hsl(var(--primary-hsl) / 50%);
    border-radius: 0.6rem;

  }

  .screen > .screen-content > .screen-icon {
    color: white;
    font-size: 4rem;
    text-shadow: 0px 0px 0.5rem white;
  }

  .screen > .screen-content > .screen-user {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    position: relative;
  }

  .screen > .screen-content .divider {
    height: 3px;
    width: 33%;
    background-color: hsl(var(--primary-hsl));
    border-radius: 1rem;
    box-shadow: 0px 0px 8px 3px hsl(var(--primary-hsl) / 60%);
    height: 2px;
  }

  .screen > .screen-content > .screen-user > :is(.name, .title) {
    font-family: "Source Code Pro", monospace;
    color: white;
    text-align: center;
    text-transform: uppercase;
  }

  .screen > .screen-content > .screen-user > .name {
    margin-top: 1.5rem;
    line-height: 1.1;
    position: relative;
    font-size: 2.95rem;
    font-weight: 600;
    transform: scaleX(0.9);
    letter-spacing: -3px;
  }

  .screen > .screen-content > .screen-user > .name:before,
  .screen > .screen-content > .screen-user > .name:after {
    content: "";
    position: absolute;
    top: calc(50% - 0.25rem);
    height: 0.5rem;
    width: 0.5rem;
    position: absolute;
    border: 2px solid white;
    border-radius: 3px;
  }

  .screen > .screen-content > .screen-user > .name:before {
    right: -1.5rem;
  }

  .screen > .screen-content > .screen-user > .name:after {
    left: -1.5rem;
  }

  .screen > .screen-content > .screen-user > .title {
    opacity: 0.8;
    font-size: 1.5rem;
    text-shadow: 0px 0px 0.5rem white;
    font-weight: 400;
    letter-spacing: 0.3rem;
  }
</style>
