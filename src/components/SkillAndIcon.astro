---
export interface Props {
	iconName: string
	skill: string
	customIcon?: any
	iconWidth?: string
}
import { Icon } from 'astro-icon'
const { iconName, skill, iconWidth, customIcon } = Astro.props
const size = iconWidth ?? '2.5rem'
---

<div class="SaI_wrapper">
	<div class="iconWrapper">
		{
			customIcon ? (
				<div style={{ width: size, height: size }}>{customIcon}</div>
			) : (
				<Icon title={skill} alt={skill} name={iconName} width={size} height={size} />
			)
		}
	</div>
	<span class="skill-name">{skill}</span>
</div>

<style>
	.SaI_wrapper {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		border-radius: 0.5rem;
	}
	.iconWrapper {
		box-shadow: 0px 0px 80px 0px hsl(var(--primary-hsl) / 30%),
			0px 0px 5px 0px hsl(var(--primary-hsl) / 40%);
		border: 1px solid rgb(0 0 0 / 5%);
		background: rgb(0 0 0 / 5%);
		border-radius: 0.5rem;
		padding: 0.625rem;
	}
	.skill-name {
		padding-top: 0.25rem;
		font-size: 0.75em;
	}
</style>
