<div class="relative">
	<h3 class="neonText fs-xl">ABOUT</h3>
	<h3 class="neonText foreground text-white fs-xl">ABOUT</h3>
</div>

<style>
	.neonText {
		--white: #5b58fa;
		--c0: #2530fa;
		--c1: #bcb9e76e;
		--c2: #09006fa8;
		transition: transform 0.125s ease;
		transform: translateY(calc(3rem + var(--scrollY) * -0.1px));
		color: var(--white);
		text-shadow: 0 0 7px #ffffff40, 0 0 8px #a9a8fc, 0 0 10px var(--white), 0 0 21px var(--white),
			0 0 42px var(--primary), 0 0 82px var(--primary), 0 0 92px var(--primary);
		text-shadow: 0 0 5px var(--c1), 0 0 15px var(--c1), 0 0 20px var(--c1), 0 0 40px var(--c1),
			0 0 60px var(--c2), 0 0 10px var(--c0), 0 0 98px var(--c2);
		color: var(--c1);
		filter: brightness(1.33);
		filter: blur(4px);
	}

	.neonText.foreground {
		position: absolute;
		inset: 0;
		filter: blur(0.5px);
		color: rgba(255, 255, 255, 0.839);
	}

	h3.neonText {
		text-align: center;
		font-weight: 500;

		font-size: 6.2rem;
		/* animation: pulsate 1.5s infinite alternate; */
		/* border: 0.2rem solid var(--white); */
		border-radius: 2rem;
		padding: 0.4em;
		/* box-shadow: 0 0 0.2rem var(--white), 0 0 0.2rem var(--white), 0 0 2rem var(--primary), 0 0 0.8rem var(--primary),
			0 0 2.8rem var(--primary), inset 0 0 1.3rem var(--primary); */
	}

	@keyframes pulsate {
		100% {
			text-shadow: 0 0 4px var(--white), 0 0 11px var(--white), 0 0 19px var(--white),
				0 0 40px var(--primary), 0 0 80px var(--primary), 0 0 90px var(--primary),
				0 0 100px var(--primary), 0 0 150px var(--primary);
		}

		0% {
			text-shadow: 0 0 2px var(--white), 0 0 4px var(--white), 0 0 6px var(--white),
				0 0 10px var(--primary), 0 0 45px var(--primary), 0 0 55px var(--primary),
				0 0 70px var(--primary), 0 0 80px var(--primary);
		}
	}
</style>
